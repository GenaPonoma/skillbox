<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_title_question_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="22dp"
            android:fontFamily="@font/rubik_bold"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="22dp"
            app:layout_constraintTop_toBottomOf="@id/header_title_question_0">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RadioGroup>

        <TextView
            android:id="@+id/header_title_question_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="22dp"
            android:fontFamily="@font/rubik_bold"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_group" />

        <RadioGroup
            android:id="@+id/radio_group_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="22dp"
            app:layout_constraintTop_toBottomOf="@id/header_title_question_1">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_1_radio_group_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_2_radio_group_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_3_radio_group_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_4_radio_group_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RadioGroup>

        <TextView
            android:id="@+id/header_title_question_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="22dp"
            android:fontFamily="@font/rubik_bold"

            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_group_1" />

        <RadioGroup
            android:id="@+id/radio_group_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="22dp"
            app:layout_constraintTop_toBottomOf="@id/header_title_question_2">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_1_radio_group_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_2_radio_group_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_3_radio_group_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_answer_4_radio_group_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="НАЗАД"
            app:layout_constraintStart_toStartOf="@id/radio_group_2"
            app:layout_constraintTop_toBottomOf="@id/radio_group_2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_send"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="ОТПРАВИТЬ"
            app:layout_constraintEnd_toEndOf="@id/radio_group_2"
            app:layout_constraintTop_toBottomOf="@id/radio_group_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>